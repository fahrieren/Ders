using System;

namespace or259
{
    class Program
    {
        static void Main(string[] args)
        {
            string s, ys = "";
            int a;
            byte c;

            Console.Write("Bir c√ºmle giriniz:");
            s = Console.ReadLine();

            for (a = 0; a < s.Length; a++)
            {
                c = (byte)s[a];

                if (c >= 65 && c <= 90)
                {
                    ys = ys + (char)(c + 32);
                }
                else
                {
                    ys = ys + s[a];
                }
            }

            Console.WriteLine(ys);

            Console.WriteLine("\n\nPress any key to continue . . . ");
            Console.ReadKey(true);
        }
    }
}
